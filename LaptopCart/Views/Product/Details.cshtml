@model Product
<style>
    html, body {
        overflow-x: hidden;
        margin: 0;
        padding: 0;
    }

    /* Optional: Prevent forced vertical scroll if height isn't needed */
    body {
        overflow-y: auto;
    }
</style>

<div class="container">
    <form method="post" app-action="Details">
        <input type="hidden" name="ProductId" value="@Model.Id" />
        <div class="row justify-content-center py-4">
            <div class="col-lg-6 col-md-8">
                <div class="card border-0 p-3 shadow border-top border-5 rounded d-flex flex-column">
                    @if (!string.IsNullOrEmpty(Model.ImagePath))
                    {
                        <img src="@Model.ImagePath" class="card-img-top rounded" style="height:200px; object-fit:cover" />

                    }
                    else
                    {
                        <img src="https://placehold.co/600x400/png" class="card-img-top rounded" />

                    }
                    <div class="card-body d-flex flex-column">
                        <div class="text-center">
                            <h3 class="text-uppercase text-dark opacity-75">@Model.Name</h3>
                            <p class="text-muted small mb-2">by <strong>@Model.Description</strong></p>
                        </div>

                        <div class="mb-3 px-2 text-center">
                            <h6 class="text-dark text-opacity-50">Price:@Model.Price</h6>
                        </div>

                        <div class="px-2 mb-3 text-secondary small">
                            @Html.Raw(Model.Description)
                        </div>

                        <div class="input-group mb-3 w-50 mx-auto">
                            <span class="input-group-text bg-primary text-white border-0 fw-semibold">Qty</span>
                            <input name="Quantity" type="number" value="1" class="form-control text-end" min="1" />
                        </div>

                        <div class="mt-auto">
                            <button type="submit" class="btn btn-dark w-100 py-2 text-uppercase fw-semibold">
                                Add to Cart
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary w-100 mt-2">Back to Home</a>
                            

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
