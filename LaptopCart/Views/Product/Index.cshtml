@model IEnumerable<Product>
<partial name="_NotificationMessage" />
<div class="row pb-3">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-sm-6">
            <div class="card border-0 p-3 shadow border-top border rounded h-100">
                @if (!string.IsNullOrEmpty(item.ImagePath))
                {
                    <img src="@item.ImagePath" class="card-img-top rounded" style="height:250px; object-fit:cover;" />
                }
                else
                {
                    <img src="https://placehold.co/500x600/png" class="card-img-top rounded" />
                }
                <div class="card-body">
                    <p class="card-title h5 text-dark text-uppercase text-center">@item.Name</p>
                    <p class="text-muted text-center small">@item.Description</p>
                </div>

                <div class="card-footer bg-white border-0 text-center">
                    <p class="fw-bold fs-5 text-success mb-2">@item.Price</p>
                    <a asp-action="Details"
                       asp-route-id="@item.Id"
                       class="btn btn-dark w-100">

                        Details
                    </a>
                </div>
            </div>
        </div>
    }
</div>