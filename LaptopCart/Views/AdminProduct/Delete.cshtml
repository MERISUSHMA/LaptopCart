@model Product
<div class="card border-0">
    <div class="card-header ml-0 text-white" style="background-color:darkred">
        <h1 class="p-2 text-center">Delete Product</h1>
    </div>
    <div class="card-body mt-3">
        <h5 class="text-danger text-danger mb-4">Are you sure you want to delete this product?</h5>
        <div class="row mb-3">
            <div class="col-md-4 text-center">
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <img src="@Model.ImagePath" alt="Product Image" width="150" height="150" class="img-thumbnail" />
                }
                else
                {
                    <span class="text-muted">No Image</span>
                }
            </div>
            <div class="col-md-8">
                <div class="form-floating mb-3">
                    <input asp-for="Name" class="form-control" disabled />
                    <label asp-for="Name" class="ms-2 text-muted">Name</label>
                </div>

                <div class="form-floating mb-3">
                    <textarea asp-for="Description" class="form-control" style="height:100px" disabled></textarea>
                        <label asp-for="Description" class="ms-2 text-muted">Description</label>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Price" class="form-control" disabled />
                    <label asp-for="Price" class="ms-2 text-muted">Price</label>
                </div>
            </div>
        </div>

        <form asp-action="deleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="row justify-content-between">
                <div class="col-3">
                    <a asp-action="Index" class="btn btn-secondary w-100">Back</a>
                </div>
                <div class="col-6">
                    <button type="submit" class="btn btn-danger w-100">Yes, Delete</button>
                </div>
            </div>
        </form>
    </div>
</div>
