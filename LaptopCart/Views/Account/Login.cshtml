@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <h2 class="text-center">Login</h2>
        <form asp-action="Login" method="post">
            <input type="hidden" asp-format="ReturnUrl"/>
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" placeholder="Email"/>
                <label asp-for="Email">Email address</label>
                <spam asp-validation-for="Email" class="text-danger"></spam>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Password" class="form-control" placeholder="Password" />
                <label asp-for="Password">Password</label>
                <spam asp-validation-for="Password" class="text-danger"></spam>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="RememberMe" class="form-control" placeholder="RememberMe" />
                <label asp-for="RememberMe">Remember Me</label>
                <spam asp-validation-for="RememberMe" class="text-danger"></spam>
            </div>
            <button type="submit" class="btn btn-success w-100">Login</button>
        </form>
    </div>
</div>
